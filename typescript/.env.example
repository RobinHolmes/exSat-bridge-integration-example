# EOS account used for transactions
EOS_ACCOUNT=youraccount

# Private key for the EOS account (keep this secure!)
EOS_PRIVATE_KEY=5KYour_Private_Key_Here

# EOS node endpoint URL
# For testnet use: https://chain-tst3.exactsat.io
# For mainnet use: https://rpc-sg.exsat.network
EOS_NODE_URL=https://rpc-sg.exsat.network

# Bridge manager permission ID (required for bridge operations)
BRDGMNG_PERMISSION_ID=0

# Enable resource payment through the res.xsat (true/false)
RESOURCE_PAYMENT=false

# API server port
PORT=3000
